{% if footnotes %}
<div class="footnotes">
  {% for footnote in footnotes %}
    <div class="footnote" id="fn-{{ loop.index }}">
      <sup>{{ loop.index }}</sup> {{ footnote | safe }}
      <a href="#fnref-{{ loop.index }}" class="footnote-backref" aria-label="Back to content">â†©</a>
    </div>
  {% endfor %}
</div>
{% endif %} 